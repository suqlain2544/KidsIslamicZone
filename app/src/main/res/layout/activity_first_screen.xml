<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1"
    tools:context="com.friendsproducts.kidzzone.FirstScreen">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/logo" />


        <EditText
            android:id="@+id/unameET"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1.08"
            android:backgroundTint="@color/textcolor"
            android:ems="10"
            android:hint="User Name"
            android:inputType="text"
            android:textColor="@color/textcolor"
            android:textColorHint="@color/textcolor"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/upassET"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/textcolor"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@color/textcolor"
            android:textColorHint="@color/textcolor"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/radioGrp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioStd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/textcolor"
                android:text="Student"
                android:checked="true"
                android:textColor="@color/textcolor"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radioTchr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/textcolor"
                android:text="Teacher"
                android:textColor="@color/textcolor"
                android:textStyle="bold" />

        </RadioGroup>

        <android.support.v7.widget.CardView
            android:id="@+id/loginBtn"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:clickable="true"
            android:onClick="clicked"
            app:cardBackgroundColor="@color/cardbackbtn"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Login"
                android:textColor="@color/textcolor" />
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/registerTv"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:onClick="clicked"
            app:cardBackgroundColor="@color/cardbackbtn"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Register Here"
                android:textColor="@color/textcolor" />
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/guestTv"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:onClick="clicked"
            app:cardBackgroundColor="@color/cardbackbtn"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Guest"
                android:textColor="@color/textcolor" />
        </android.support.v7.widget.CardView>


    </LinearLayout>
</RelativeLayout>
