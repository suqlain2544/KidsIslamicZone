<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2"
    tools:context="com.friendsproducts.kidzzone.RegisterStudent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/stdImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:gravity="center"
            app:srcCompat="@mipmap/ic_launcher" />

        <EditText
            android:id="@+id/stdName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/textcolor"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            android:textColor="@color/textcolor"
            android:textColorHint="@color/textcolor"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/unique_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/textcolor"
            android:ems="10"
            android:hint="User Name"
            android:inputType="textPersonName"
            android:textColor="@color/textcolor"
            android:textColorHint="@color/textcolor"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/stdEmail"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/textcolor"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="@color/textcolor"
            android:textColorHint="@color/textcolor"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/stdPass"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/textcolor"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@color/textcolor"
            android:textColorHint="@color/textcolor"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/stdAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/textcolor"
            android:ems="10"
            android:hint="Age"
            android:inputType="number"
            android:textColor="@color/textcolor"
            android:textColorHint="@color/textcolor"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/stdPhNmbr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/textcolor"
            android:ems="10"
            android:hint="Phone Number"
            android:inputType="number"
            android:textColor="@color/textcolor"
            android:textColorHint="@color/textcolor"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/stdRadioGrp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioStd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/textcolor"
                android:checked="true"
                android:text="Male"
                android:textColor="@color/textcolor"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radioTchr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/textcolor"
                android:text="Female"
                android:textColor="@color/textcolor"
                android:textStyle="bold" />

        </RadioGroup>


        <android.support.v7.widget.CardView
            android:id="@+id/stdRegBtn"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:clickable="true"
            android:onClick="clicked"
            app:cardBackgroundColor="#354665"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Register"
                android:textColor="@color/textcolor"
                android:textStyle="bold" />
        </android.support.v7.widget.CardView>

    </LinearLayout>

</RelativeLayout>
