<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2"
    tools:context="com.friendsproducts.kidzzone.RegisterTeacher">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/tecImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:gravity="center"
            app:srcCompat="@mipmap/ic_launcher" />

        <EditText
            android:textStyle="bold"
            android:backgroundTint="@color/textcolor"
            android:textColor="@color/textcolor"
            android:textColorHint="@color/textcolor"
            android:id="@+id/tecName"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName" />

        <EditText
            android:textStyle="bold"
            android:backgroundTint="@color/textcolor"
            android:textColor="@color/textcolor"
            android:textColorHint="@color/textcolor"
            android:id="@+id/tecUniqueName"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="User Name" />

        <EditText
            android:textStyle="bold"
            android:backgroundTint="@color/textcolor"
            android:textColor="@color/textcolor"
            android:textColorHint="@color/textcolor"
            android:id="@+id/tecEmail"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress" />

        <EditText
            android:textStyle="bold"
            android:backgroundTint="@color/textcolor"
            android:textColor="@color/textcolor"
            android:textColorHint="@color/textcolor"

            android:id="@+id/tecPass"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword" />

        <EditText
            android:textStyle="bold"
            android:backgroundTint="@color/textcolor"
            android:textColor="@color/textcolor"
            android:textColorHint="@color/textcolor"
            android:id="@+id/tecQual"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Qualification"
            android:inputType="textPersonName" />

        <EditText
            android:textStyle="bold"
            android:backgroundTint="@color/textcolor"
            android:textColor="@color/textcolor"
            android:textColorHint="@color/textcolor"
            android:id="@+id/tecPhNmbr"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Phone Number"
            android:inputType="number" />

        <RadioGroup
            android:id="@+id/tecRadioGrp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioStd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:buttonTint="@color/textcolor"
                android:textColor="@color/textcolor"
                android:checked="true"
                android:text="Male" />

            <RadioButton
                android:id="@+id/radioTchr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:buttonTint="@color/textcolor"
                android:textColor="@color/textcolor"
                android:text="Female" />

        </RadioGroup>

        <android.support.v7.widget.CardView
            android:id="@+id/tecRegBtn"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:onClick="clicked"
            android:clickable="true"
            app:cardBackgroundColor="#354665"
            app:cardCornerRadius="10dp">

            <TextView
                android:text="Register"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/textcolor" />
        </android.support.v7.widget.CardView>

    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
